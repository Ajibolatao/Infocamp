<div class="login-page">
   <form action="/" method="post">
      <div class="form-group">
         <h2 class="form-title">
            Log in
         </h2>
      </div>
      <div class="form-group">
         <label>Username</label>
         <input type="text" name="username">
      </div>
      <div class="form-group">
         <label>Password</label>
         <input type="password" name="password">
      </div>
      <div class="form-group">
         <input type="submit" value="Login">
      </div>
   </form>

</div>